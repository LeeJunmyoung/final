<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="accept">

	<!-- salary row add -->
	<insert id="setSalary_member" parameterType="salary.db.SalaryDataBean">
		insert into salary(salary_num,mem_num,name,com_num,com_dept_num,com_dept_name,com_pos_num,com_pos_name)
		values(salary_num.NEXTVAL,#{mem_num},#{name},#{com_num},#{com_dept_num},#{com_dept_name},#{com_pos_num}, #{com_pos_name})
	</insert>

	<!-- 승인 -->
	<update id="com_update_member" parameterType="Map">
		update members set
		com_num=#{com_num} where mem_num=#{mem_num}
	</update>

	<!-- 거절 -->
	<delete id="com_delete_member" parameterType="int">
		delete from members
		com_num
		where mem_num=#{mem_num}
	</delete>

	<!-- 가입 신청자 리스트 -->
	<select id="accept_select" parameterType="int" resultType="company.db.MembersDTO">
		select * from members where com_num=#{com_num}
	</select>

	<!-- 가입 신청자 총 인원수 -->
	<select id="accept_count" parameterType="int" resultType="int">
		select
		count(*) from members where com_num=#{com_num}
	</select>

	<!-- get member info -->
	<select id="getMember" parameterType="int" resultType="salary.db.SalaryDataBean">
		select mem_num,name,com_num,com_dept_num,com_dept_name,com_pos_num,com_pos_name from members where mem_num=#{mem_num}
	</select>

</mapper>
